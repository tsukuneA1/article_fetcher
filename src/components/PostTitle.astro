---
import type { Post } from '../libs/interfaces.ts'

export interface Props {
  post: Post
  enableLink?: boolean
}

const { post, enableLink = true } = Astro.props

let title = post.Title
---

<h2 class="post-title">
  {
    enableLink ? (
      <a href={post.Link} class="hover__opacity">
        {post.Icon && post.Icon.Type === 'emoji' && 'Emoji' in post.Icon ? (
          <>
            <span>{post.Icon.Emoji}</span>
            {title}
          </>
        ) : post.Icon && post.Icon.Type === 'external' && 'Url' in post.Icon ? (
          <>
            <img src={post.Icon.Url} alt="Post title icon" />
            {title}
          </>
        ) : (
          title
        )}
      </a>

    ) : (
      <>
        {post.Icon && post.Icon.Type === 'emoji' && 'Emoji' in post.Icon ? (
          <>
            <span>{post.Icon.Emoji}</span>
            {title}
          </>
        ) : post.Icon && post.Icon.Type === 'external' && 'Url' in post.Icon ? (
          <>
            <img src={post.Icon.Url} alt="Post title icon" />
            {title}
          </>
        ) : (
          title
        )}
      </>
    )
  }
</h2>